{
  "manifest_version": 3,
  "name": "Wordle ML Solver",
  "version": "1.0.0",
  "description": "AI-powered Wordle solver that reads your game and suggests optimal guesses",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "https://www.nytimes.com/*",
    "https://*.nytimes.com/*",
    "https://wordleunlimited.org/*",
    "https://*.wordleunlimited.org/*",
    "https://wordleunlimited.com/*",
    "https://*.wordleunlimited.com/*",
    "https://wordlegame.org/*",
    "https://*.wordlegame.org/*",
    "http://localhost:5000/*",
    "http://127.0.0.1:5000/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.nytimes.com/games/wordle/*",
        "https://*.nytimes.com/games/wordle/*",
        "https://www.nytimes.com/*",
        "https://*.nytimes.com/*",
        "https://wordleunlimited.org/*",
        "https://*.wordleunlimited.org/*",
        "https://wordleunlimited.com/*",
        "https://*.wordleunlimited.com/*",
        "https://wordlegame.org/*",
        "https://*.wordlegame.org/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
